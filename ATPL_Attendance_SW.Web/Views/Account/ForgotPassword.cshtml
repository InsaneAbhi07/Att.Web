@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Forgot Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/plugins/tabler-icons/tabler-icons.min.css" />
    <link rel="stylesheet" href="~/assets/css/style.css" />

    <style>
        body {
            background: Azure;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .forgot-card {
            width: 100%;
            max-width: 420px;
            border-radius: 14px;
        }

        .forgot-icon {
            width: 70px;
            height: 70px;
            background: DarkOrange;
            color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: -45px auto 15px;
            font-size: 32px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }
    </style>
</head>

<body>

    <div class="card forgot-card shadow-lg">
        <div class="card-body p-4">

            <!-- ICON -->
            <div class="forgot-icon">
                <i class="ti ti-key"></i>
            </div>

            <h4 class="text-center mb-1">Forgot Password</h4>
            <p class="text-center text-muted mb-4">
                Password recovery under process
            </p>

            <!-- FORM (NO POST NOW) -->
            <form onsubmit="return showPopup();">

                <div class="mb-3">
                    <label class="form-label">Username / Employee Code</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="ti ti-user"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Enter ID" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Registered Mobile / Email</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="ti ti-mail"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Enter mobile or email" required />
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">
                    <i class="ti ti-send me-1"></i> Send OTP
                </button>

                <div class="text-center mt-3">
                    <a asp-action="Login" asp-controller="Account">
                        Back to Login
                    </a>
                </div>

            </form>

        </div>
    </div>

    <!-- POPUP -->
    <script>
        function showPopup() {
            alert("Forgot password is under process.\nOTP system will be enabled soon.");
            return false; // prevent submit
        }
    </script>

    <!-- JS -->
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>

</body>
</html>

@model System.Data.DataTable

<h4>Attendance Policies</h4>

<a asp-action="CreateOT_Late" class="btn btn-primary btn-sm mb-2">+ Add Policy</a>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Action</th>
    </tr>

    @foreach (System.Data.DataRow r in Model.Rows)
    {
        <tr>
            <td>@r["PolicyName"]</td>
            <td>@(Convert.ToBoolean(r["IsActive"]) ? "Active" : "Inactive")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@r["PolicyId"]" class="btn btn-sm btn-warning">Edit</a>
            </td>
        </tr>
    }
</table>

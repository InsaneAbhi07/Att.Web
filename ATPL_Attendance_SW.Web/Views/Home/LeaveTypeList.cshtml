@model List<LeaveTypeVM>

@{
    ViewData["Title"] = "Master Leave Type";
}

<style>
    .grid-scroll {
        max-height: 350px;
        overflow-y: auto;
    }
</style>
@if (TempData["Msg"] != null)
{
    <div class="alert alert-info">@TempData["Msg"]</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="page-title">Master Leave Type</h4>

    <button class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#leaveTypeModal"
            onclick="clearForm()">
        <i class="ti ti-plus"></i> Add Leave Type
    </button>
</div>

<div class="row mb-2">
    <div class="col-md-6">
        <select id="pageSize" class="form-select" style="width:120px">
            <option value="5">Top 5</option>
            <option value="10" selected>Top 10</option>
            <option value="25">Top 25</option>
            <option value="100">Top 100</option>
        </select>
    </div>

    <div class="col-md-6 text-end">
        <input type="text"
               id="searchBox"
               class="form-control"
               placeholder="Search leave..."
               style="width:250px; display:inline-block;">
    </div>
</div>

<div class="card">
    <div class="table-responsive grid-scroll">
        <table class="table table-hover" id="deptTable">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>Leave Type</th>
                    <th>Penalty in Days</th>
                    <th>Total Leave Allowed</th>
                    <th width="120">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].LeaveType</td>
                        <td>@Model[i].Penalty</td>
                        <td>@Model[i].Total_Y</td>
                        <td>
                            <button class="btn btn-sm btn-warning edit-btn"
                                    data-id="@Model[i].Id"
                                    data-leavetype="@Model[i].LeaveType" data-penalty="@Model[i].Penalty" data-total_y="@Model[i].Total_Y">
                                <i class="ti ti-edit"></i>
                            </button>

                            <form asp-action="DeleteLeaveType"
                                  method="post"
                                  style="display:inline">
                                <input type="hidden" name="id" value="@Model[i].Id" />
                                <button class="btn btn-sm btn-danger"
                                        onclick="return confirm('Do you want to delete this record?')">
                                    <i class="ti ti-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-flex justify-content-end mt-2">
    <ul class="pagination" id="pagination"></ul>
</div>

<!-- MODAL -->
<div class="modal fade" id="leaveTypeModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <form asp-action="AddLeaveType" method="post">

                <div class="modal-header">
                    <h5 class="modal-title">Add / Edit Leave Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <input type="hidden" name="Id" id="Id" />

                    <div class="mb-3">
                        <label class="form-label">Leave Type</label>
                        <input type="text"
                               class="text-uppercase form-control"
                               name="LeaveType"
                               id="LeaveType"
                               required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Penalty in Days</label>
                        <input type="number"
                               class="form-control"
                               name="Penalty"
                               id="Penalty"
                               required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Total Leaves allowed in Year</label>
                        <input type="number"
                               class="form-control"
                               name="Total_Y"
                               id="Total_Y"
                               required />
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/assets/js/global.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {

        document.querySelectorAll(".edit-btn").forEach(btn => {

            btn.addEventListener("click", function () {

                Id.value = this.dataset.id;
                LeaveType.value = this.dataset.leavetype;
                Penalty.value = this.dataset.penalty;
                Total_Y.value = this.dataset.total_y;

                new bootstrap.Modal(
                    document.getElementById('leaveTypeModal')
                ).show();
            });
        });
    });

    function clearForm() {
        Id.value = "";
        LeaveType.value = "";
        Penalty.value = "";
        Total_Y.value = "";
    }
</script>

@model List<LeaveTypeVM>

@{
    ViewData["Title"] = "Master Leave Type";
}
<link href="~/assets/css/popup.css" rel="stylesheet" />

<style>
    .grid-scroll {
        max-height: 350px;
        overflow-y: auto;
    }

    .form-check-label {
    font-weight: 600;
    cursor: pointer;
}

#compDiv {
    background: #f8fafc;
    padding: 10px;
    border-radius: 6px;
    border: 1px dashed #cbd5f5;
}


</style>
@if (TempData["Msg"] != null)
{
    <div class="alert alert-info">@TempData["Msg"]</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="page-title">Master Leave Type</h4>

    <button class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#leaveTypeModal"
            onclick="clearForm()">
        <i class="ti ti-plus"></i> Add Leave Type
    </button>
</div>

<div class="row mb-2">
    <div class="col-md-6">
        <select id="pageSize" class="form-select" style="width:120px">
            <option value="5">Top 5</option>
            <option value="10" selected>Top 10</option>
            <option value="25">Top 25</option>
            <option value="100">Top 100</option>
        </select>
    </div>

    <div class="col-md-6 text-end">
        <input type="text"
               id="searchBox"
               class="form-control"
               placeholder="Search leave..."
               style="width:250px; display:inline-block;">
    </div>
</div>

<div class="card">
    <div class="table-responsive grid-scroll">
        <table class="table table-hover" id="deptTable">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>Leave Type</th>
                    <th>Penalty in Days</th>
                    <th>Total Leave Allowed</th>
                    <th>Carry Forward</th>
                    <th width="120">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].LeaveType</td>
                        <td>@Model[i].Penalty</td>
                        <td>@Model[i].Total_Y</td>
                        <td>@Model[i].CarryForward</td>
                        <td>
                            <button class="btn btn-sm btn-warning edit-btn"
                                    data-id="@Model[i].Id"
                                    data-leavetype="@Model[i].LeaveType"
                                    data-penalty="@Model[i].Penalty"
                                    data-total_y="@Model[i].Total_Y"
                                    data-carryforward="@Model[i].CarryForward"
                                    data-compensationin="@Model[i].Compensationin">
                                <i class="ti ti-edit"></i>
                            </button>
                           <form asp-action="DeleteLeaveType" method="post" style="display:inline">
                               <input type="hidden" name="id" value="@Model[i].Id" />
                               <button class="btn btn-sm btn-danger" 
                               onclick="return confirm('Do you want to delete this record?')"> 
                               <i class="ti ti-trash"></i> </button></form>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<div class="d-flex justify-content-end mt-2">
    <ul class="pagination" id="pagination"></ul>
</div>

<!-- MODAL -->
<div class="modal fade" id="leaveTypeModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <form asp-action="AddLeaveType" method="post">

                <div class="modal-header">
                    <h5 class="modal-title">Add / Edit Leave Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <input type="hidden" id="Id" name="Id" />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Leave Type</label>
                        <input type="text" class="form-control text-uppercase"
                               id="LeaveType" name="LeaveType" required />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Penalty (Days)</label>
                            <input type="number" class="form-control"
                                   id="Penalty" name="Penalty" required />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Total Leaves / Year</label>
                            <input type="number" class="form-control"
                                   id="Total_Y" name="Total_Y" required />
                        </div>
                    </div>

                    <hr />

                    <label class="form-label fw-semibold">Carry Forward</label>

                    <div class="d-flex align-items-center gap-4 mb-2">
                        <label class="form-check">
                            <input class="form-check-input" type="radio"
                                   name="CarryForward" value="Yes" checked />
                            Yes
                        </label>

                        <label class="form-check">
                            <input class="form-check-input" type="radio"
                                   name="CarryForward" value="No" />
                            No
                        </label>
                    </div>

                    <div id="compDiv" class="d-none mt-2 p-2 bg-light rounded border">
                        <label class="form-label fw-semibold">Compensation In</label>
                        <select class="form-select" id="Compensationin" name="Compensationin">
                            <option value="">Select</option>
                            <option value="Monthly">Monthly</option>
                            <option value="Yearly">Yearly</option>
                        </select>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>

@if (TempData["Msg"] != null)
{
    var type = TempData["Type"] ?? "success"; // success / error
                                              <div class="popup-overlay @type" id="centerPopup">
                                                  <div class="popup-box">
                                                      <div class="popup-icon @type">
                                                          @(type == "success" ? "✓" : "✕")
                                                      </div>

            <h4>@(type == "success" ? "Success" : "Failed")</h4>
            <p>@TempData["Msg"]</p>
        </div>
    </div>
}


<script src="~/assets/js/global.js"></script>
 

<script>

              const popup = document.getElementById("centerPopup");
    if (popup) {
        setTimeout(() => {
            popup.style.opacity = "0";
            setTimeout(() => popup.remove(), 300);
        }, 1500);
    }
    document.addEventListener("DOMContentLoaded", function () {

        const modal = new bootstrap.Modal(document.getElementById('leaveTypeModal'));
        const compDiv = document.getElementById("compDiv");
        const compDDL = document.getElementById("Compensationin");

        function toggleComp(show) {
            if (show) {
                compDiv.classList.remove("d-none");
            } else {
                compDiv.classList.add("d-none");
                compDDL.value = "";
            }
        }

        // radio change
        document.querySelectorAll('input[name="CarryForward"]').forEach(r => {
            r.addEventListener("change", function () {
                toggleComp(this.value === "No");
            });
        });

        // edit
        document.querySelectorAll(".edit-btn").forEach(btn => {
            btn.addEventListener("click", function () {

                Id.value = this.dataset.id;
                LeaveType.value = this.dataset.leavetype;
                Penalty.value = this.dataset.penalty;
                Total_Y.value = this.dataset.total_y;

                const carry = this.dataset.carryforward;
                const comp = this.dataset.compensationin;

                document.querySelector(`input[name="CarryForward"][value="${carry}"]`).checked = true;

                if (carry === "No") {
                    toggleComp(true);
                    compDDL.value = comp;
                } else {
                    toggleComp(false);
                }

                modal.show();
            });
        });

        // clear form
        window.clearForm = function () {
            Id.value = "";
            LeaveType.value = "";
            Penalty.value = "";
            Total_Y.value = "";
            compDDL.value = "";
            document.querySelector('input[name="CarryForward"][value="Yes"]').checked = true;
            toggleComp(false);
        };
    });
</script>



@model List<HolidayVM>
@{
    ViewData["Title"] = "Master Holiday";
}

@if (TempData["Msg"] != null)
{
    <div class="alert alert-info">@TempData["Msg"]</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="page-title">Master Holiday</h4>

    <button class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#holidayModal"
            onclick="clearForm()">
        <i class="ti ti-plus"></i> Add Holiday
    </button>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>Holiday</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th width="120">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Holiday</td>
                        <td>@Model[i].Date</td>
                        <td>@Model[i].Description</td>
                        <td>
                            <span class="badge @(Model[i].Active ? "bg-success" : "bg-danger")">
                                @(Model[i].Active ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-warning edit-btn"
                                    data-id="@Model[i].Id"
                                    data-holiday="@Model[i].Holiday"
                                    data-date="@Model[i].Date"
                                    data-description="@Model[i].Description"
                                    data-active="@Model[i].Active">
                                <i class="ti ti-edit"></i>
                            </button>


                            <form asp-action="DeleteHoliday"
                                  method="post"
                                  style="display:inline">
                                <input type="hidden" name="id" value="@Model[i].Id" />
                                <button class="btn btn-sm btn-danger"
                                        onclick="return confirm('Delete this record?')">
                                    <i class="ti ti-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- MODAL -->
<div class="modal fade" id="holidayModal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">

            <form asp-action="AddHoliday" method="post">

                <div class="modal-header">
                    <h5 class="modal-title">Add / Edit Holiday</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <input type="hidden" name="Id" id="Id" />

                    <div class="mb-3">
                        <label class="form-label">Holiday</label>
                        <input type="text" class="form-control" name="Holiday" id="Holiday" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input type="date" class="form-control" name="Date" id="Date" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="Description" id="Description"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" name="Active" id="Active">
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal"> Cancel </button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {

        document.querySelectorAll(".edit-btn").forEach(btn => {

            btn.addEventListener("click", function () {

                Id.value = this.dataset.id;
                Holiday.value = this.dataset.holiday;
                // ✅ DATE FIX (GUARANTEED)
                Date.value = this.dataset.date;

                Description.value = this.dataset.description;
                Active.value = (this.dataset.active === "True" || this.dataset.active === "true") ? "true" : "false";

                new bootstrap.Modal(
                    document.getElementById('holidayModal')
                ).show();
            });
        });
    });

    function clearForm() {
        Id.value = "";
        Holiday.value = "";
        Date.value = "";
        Description.value = "";
        Active.value = "true";
    }
</script>

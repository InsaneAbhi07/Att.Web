@model List<HolidayVM>
@{
    ViewData["Title"] = "Master Holiday";
}

<!-- PAGE HEADER -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="page-title">Master Holiday</h4>

    <button class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#designationModal"
            onclick="clearForm()">
        <i class="ti ti-plus"></i> Add Holiday
    </button>
</div>

<!-- LIST -->
<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>Holiday Name</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th width="120">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Holiday</td>
                        <td>@Model[i].Date</td>
                        <td>@Model[i].Description</td>
                        <td>@Model[i].Active</td>
                        <td>
                            <span class="badge bg-success">Active</span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-warning"
                                    onclick="editDesignation('@Model[i].Id', '@Model[i].Holiday', '@Model[i].Date' , '@Model[i].Description' , '@Model[i].Active')">
                                <i class="ti ti-edit"></i>
                            </button>

                            <form asp-action="DeleteHoliday" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@Model[i].Id" />
                                <button class="btn btn-sm btn-danger"
                                        onclick="return confirm('Delete this record?')">
                                    <i class="ti ti-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="add_holiday" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Add New Holiday</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"></button>
            </div>

            <form>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control" name="Holiday" id="Holiday">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <div class="input-group">
                            <input type="text" class="form-control datetimepicker" placeholder="dd/mm/yyyy" name="Date" id="Date">
                            <span class="input-group-text">
                                <i class="ti ti-calendar"></i>
                            </span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" rows="3" name="Description" id="Description"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" name="Active" id="Active">
                            <option>Active</option>
                            <option>Inactive</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-light"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>

                    <button type="submit"
                            class="btn btn-primary">
                        Save
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

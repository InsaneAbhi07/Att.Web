@model List<MasterShift>

@{
    ViewData["Title"] = "Master Shift";
}
<style>
    .grid-scroll {
        max-height: 350px;
        overflow-y: auto;
    }

    .time-sm {
        width: 100%;
        max-width: 140px;
    }

    .radio-inline {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .comp-inline {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .comp-inline select {
            max-width: 180px;
        }

    .form-check-input {
        cursor: pointer;
    }

    #compDiv select {
        height: 38px;
    }


</style>
<link href="~/assets/css/popup.css" rel="stylesheet" />
<!-- PAGE HEADER -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="page-title">Master Shift</h4>

    <button class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#shiftModal"
            onclick="clearForm()">
        <i class="ti ti-plus"></i> Add Shift
    </button>
</div>

<div class="row mb-2">
    <div class="col-md-6">
        <select id="pageSize" class="form-select" style="width:120px">
            <option value="5">Top 5</option>
            <option value="10" selected>Top 10</option>
            <option value="25">Top 25</option>
            <option value="100">Top 100</option>
        </select>
    </div>

    <div class="col-md-6 text-end">
        <input type="text"
               id="searchBox"
               class="form-control"
               placeholder="Search shift..."
               style="width:250px; display:inline-block;">
    </div>
</div>


<!-- LIST -->
<div class="card">
    <div class="table-responsive grid-scroll">
        <table class="table table-hover" id="deptTable">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>Shift</th>
                    <th>Type</th>
                    <th>In</th>
                    <th>Out</th>
                    <th>Carry Forward</th>
                    <th width="120">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Shift</td>
                        <td>@Model[i].ShiftType</td>
                        <td>@Model[i].InTime</td>
                        <td>@Model[i].OutTime</td>
                        <td>@Model[i].CarryForward</td>
                        <td>
                            <button class="btn btn-sm btn-warning"
                                    onclick="editShift(
                                    '@Model[i].Id',
                                    '@Model[i].Shift',
                                    '@Model[i].ShiftType',
                                    '@Model[i].InTime',
                                    '@Model[i].OutTime',
                                    '@Model[i].BreakOut',
                                    '@Model[i].BreakIn',
                                    '@Model[i].CarryForward',
                                    '@Model[i].Compensationin'
                                    )">
                                <i class="ti ti-edit"></i>
                            </button>

                            <form asp-action="DeleteShift"
                                  method="post"
                                  style="display:inline">
                                <input type="hidden" name="id" value="@Model[i].Id" />
                                <button class="btn btn-sm btn-danger"
                                        onclick="return confirm('Delete this shift?')">
                                    <i class="ti ti-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-flex justify-content-end mt-2">
    <ul class="pagination" id="pagination"></ul>
</div>
<!-- ADD / EDIT MODAL -->
<div class="modal fade" id="shiftModal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <form asp-action="AddShift" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Add / Edit Shift</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body row g-2">

                    <input type="hidden" id="Id" name="Id" />

                    <div class="col-md-6">
                        <label class="form-label">Shift Name</label>
                        <input type="text" class="form-control"
                               name="Shift" id="Shift" required />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Shift Type</label>
                        <select id="ShiftType" name="ShiftType" class="form-control dropdown">
                            <option value="Day">Day</option>
                            <option value="Night">Night</option>
                             </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">In Time</label>
                        <input type="time" class="form-control time-sm" name="InTime" id="InTime" />

                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Out Time</label>
                        <input type="time" class="form-control time-sm" name="OutTime" id="OutTime" />

                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Break Out</label>
                        <input type="time" class="form-control time-sm" name="BreakOut" id="BreakOut" />

                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Break In</label>
                        <input type="time" class="form-control time-sm" name="BreakIn" id="BreakIn" />

                    </div>

                    <div class="col-md-12 mt-3">
                        <label class="form-label fw-semibold">Carry Forward</label>

                        <div class="d-flex align-items-center gap-4 flex-wrap">

                            <div class="form-check form-check-inline">
                                <input class="form-check-input"
                                       type="radio"
                                       name="CarryForward"
                                       id="CarryForward"
                                       value="Yes"
                                       checked
                                       onclick="toggleComp(false)">
                                <label class="form-check-label">Yes</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input"
                                       type="radio"
                                       name="CarryForward"
                                       id="CarryForward"
                                       value="No"
                                       onclick="toggleComp(true)">
                                <label class="form-check-label">No</label>
                            </div>

                            <!-- dropdown inline -->
                            <div id="compDiv" class="d-none" style="min-width:260px;">
                                <div class="d-flex align-items-center gap-2">
                                    <label class="mb-0 fw-semibold" style="min-width:150px;">Compensation In</label>
                                    <select name="Compensationin"
                                            id="Compensationin"
                                            class="form-select"
                                            style="min-width:180px;">
                                        <option value="">Select</option>
                                        <option value="Monthly">Monthly</option>
                                        <option value="Yearly">Yearly</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>


                </div>


                 <div class="modal-footer">
                    <button class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button class="btn btn-primary">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>

@if (TempData["Msg"] != null)
{
    <div class="popup-overlay" id="centerPopup">
        <div class="popup-box">
            <h4>Success</h4>
            <p>@TempData["Msg"]</p>
        </div>
    </div>
}

<script src="~/assets/js/global.js"></script>
@section Scripts {
    <script>

        	 const popup = document.getElementById("centerPopup");
			if (popup) {
				setTimeout(() => popup.remove(), 1200);
			}

               function clearForm() {
            document.getElementById("Id").value = "";
            document.getElementById("Shift").value = "";
            document.getElementById("ShiftType").value = "Day";
            document.getElementById("InTime").value = "";
            document.getElementById("OutTime").value = "";
            document.getElementById("BreakOut").value = "";
            document.getElementById("BreakIn").value = "";
            document.getElementById("Compensationin").value = "";
            document.querySelector('input[name="CarryForward"][value="Yes"]').checked = true;
            toggleComp(false);
        }


               function editShift(id, shift, type, inTime, outTime, breakOut, breakIn, carry, comp) {

            document.getElementById("Id").value = id;
            document.getElementById("Shift").value = shift;
            document.getElementById("ShiftType").value = type;
            document.getElementById("InTime").value = inTime;
            document.getElementById("OutTime").value = outTime;
            document.getElementById("BreakOut").value = breakOut;
            document.getElementById("BreakIn").value = breakIn;

            // radio set
            document.querySelector(`input[name="CarryForward"][value="${carry}"]`).checked = true;

            if (carry === "No") {
                toggleComp(true);
                document.getElementById("Compensationin").value = comp;
            } else {
                toggleComp(false);
            }

            new bootstrap.Modal(document.getElementById('shiftModal')).show();
        }


                function toggleComp(show) {
            const div = document.getElementById("compDiv");
            if (show) {
                div.classList.remove("d-none");
            } else {
                div.classList.add("d-none");
                document.getElementById("Compensationin").value = "";
            }
        }

                function beforeSave() {
            const carry = document.querySelector('input[name="CarryForward"]:checked').value;

            if (carry === "Yes") {
                document.getElementById("Compensationin").value = "";
            }
            return true;
        }


    </script>
}
